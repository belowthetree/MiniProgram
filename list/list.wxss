 .navbar{  
  position: relative; 
  display: flex;  
  background: #fff;  
  top: 195rpx;
  width: 800rpx;
  height: 107rpx;
  border-width: 4rpx 0rpx 4rpx 0rpx;
  box-shadow: 0rpx 0rpx 0rpx 0.2rpx #d3d3d3 inset;
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
  font-size:14px;
  letter-spacing: 12rpx;

}  
/* 顶部导航字体颜色 */
.navbar .item.active{  
   color: #a6a5c4;
  
}  
/* 顶部指示条属性 */
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 5rpx;  
  background: #a6a5c4;  
  width: 70%;
  margin: 0px auto;
}
