.wxSearch{
  position: absolute;
  top: 43px;
  left: 0;
  width: 100%;
  height: 100%;
  border-top: 1px #eee solid; 
  background-color: rgba(0, 0, 0, 0.2); 
}
.wxSearchInner{
  background-color: #fff;
}
.wxSearch-section{
  background-color: #fff;
  padding: 5px 10px;
  /* border: 1px #eee solid;  */
}
.wxSearch-pancel{
  display: flex;
  flex-direction: row;
}
.weui-icon-search_in-box{
  position: absolute;
  top:161px;
}
.wxSearch-input{
  background-color: #F3F4F6;
  padding: 5px 28px;
  height: 24px;
  width:90%;
  font-size: 14px;
  color: #98989f;
  border-radius:4px;
}
.placeholder{
  z-index:2; 
  position:absolute;
  color: #98989f;
  font-size: 14px;
  left: 20px;
  top: 25px; 
  transform: translate3d(0,-50%,0); 
}

.wxSearch-button{
  width:76px;
  color: #333333;
  margin-left: 10px;
  border: 1px #eee solid; 
  font-size: 14px;
  line-height:68rpx;
  height: 34px;
  display: flex;
  justify-content: center;
  border-radius: 3px;
}

.wxSearchTitle{
  display: block;
  padding: 10px 5px 5px 10px;
  font-size: 12px;
  text-align: center;
}


.wxSearchMindKeyItem{
  padding: 10px 5px;
  border-bottom: 1px solid #eee;
  display: flex;
  font-size: 14px;
  color: cornflowerblue;
}

.wxSearchKeyList{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.wxSearchKeyItem{
  flex: 0 0 20%;
  font-size: 14px;
  text-align: center;
  border: 1px solid #eee;
  margin: 5px;
  padding: 5px 10px;
  border-radius: 5px;
}
.wxSearchHistoryItem{
  padding: 10px 5px;
  border-bottom: 1px solid #eee;
  display: flex;
}
.wxSearchHistoryItemText{
  flex: 8;
  font-size: 14px;
}
.wxSearchHistoryItemDel{
  flex: 1;
  font-size: 12px;
  text-align: center;
  padding: 3px 5px;
  border: 1px solid #eee;
  border-radius: 5px;
}
.wxSearchHistoryEmpty{
  text-align: center;
  height: 50px;
  line-height: 50px;
  font-size: 12px;
}
.wxSearchDeleteAllBtn{
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 12px;
}